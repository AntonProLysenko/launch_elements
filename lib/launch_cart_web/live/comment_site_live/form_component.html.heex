<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="store-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">

    <div class="input-group">
      <%= label f, :name %>
      <%= error_tag f, :name %>
      <%= text_input f, :name %>
    </div>

    <div class="input-group">
      <%= label f, :url %>
      <%= error_tag f, :url %>
      <%= text_input f, :url %>
    </div>
    
    <div class="form__actions">
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
